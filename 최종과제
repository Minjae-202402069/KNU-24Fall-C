    system("cls");
    for (i = 0; i < height; i++) {
        for (j = 0; j < width; j++) { // 벽 생성
            if (i == 0 || i == height - 1 || j == 0 || j == width - 1) {
                printf("#");
            }
            else {
                int isSnakePart = 0;

                // 첫 번째 뱀 확인
                for (int k = 0; k < length; k++) {
